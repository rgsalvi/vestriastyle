{
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/recipes/index.json", "destination": "/api/recipes-index" },
    { "source": "/recipes/:slug/meta.json", "destination": "/api/recipes-meta?slug=:slug" },
    { "source": "/((?!api|.*\\..*).*)", "destination": "/" }
  ],
  "functions": {
    "api/*.ts": {
      "maxDuration": 60,
      "memory": 1536
    }
  }
}
